<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_flag"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_rank"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="1"
        android:textColor="#1E90FF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toEndOf="@+id/img_flag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_country"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="China"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_flag"
        app:layout_constraintTop_toBottomOf="@+id/textView_rank" />

    <TextView
        android:id="@+id/textView_population"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="123123124112412"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_flag"
        app:layout_constraintTop_toBottomOf="@+id/textView_country" />


</android.support.constraint.ConstraintLayout>